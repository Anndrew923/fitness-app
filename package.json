{
  "name": "ultimate-physique",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@capacitor-community/admob": "^6.0.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "firebase": "^11.8.1",
    "i18next": "^25.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.0",
    "react-router-dom": "^7.6.1",
    "recharts": "^2.15.3",
    "sharp": "^0.34.3",
    "web-vitals": "^5.0.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "NODE_ENV=production node server.js",
    "icons": "node scripts/generate-icons.js",
    "postinstall": "echo 'skip playwright browsers on prod'",
    "check": "eslint src --ext .js,.jsx --fix",
    "build-check": "npm run build && echo '構建成功'",
    "full-check": "npm run check && npm run build-check",
    "quick-check": "bash quick-check.sh",
    "weekly-check": "bash weekly-check.sh",
    "phase-check": "bash phase-check.sh",
    "test:auto": "node scripts/auto-test.js",
    "test:browser": "echo '請在瀏覽器控制台運行 scripts/browser-test.js'",
    "test:performance": "node scripts/performance-monitor.js",
    "test:error": "node scripts/error-analyzer.js",
    "test:all": "npm run test:auto && npm run test:performance && npm run test:error",
    "test:admob": "npm run test:auto && npm run test:performance && npm run test:error && echo 'AdMob 完整測試完成'",
    "test:comprehensive": "npm run test:auto && npm run test:performance && npm run test:error && echo '🎉 綜合測試完成'",
    "test:quick": "npm run test:auto && echo '快速測試完成'",
    "test:monitor": "npm run test:performance && npm run test:error && echo '監控測試完成'",
    "health:check": "node scripts/health-check.js",
    "monitor:start": "node scripts/monitor.js",
    "monitor:start:fast": "node scripts/monitor.js --interval 10",
    "deploy:check": "node scripts/deploy-to-netlify.js",
    "deploy:force": "node scripts/deploy-to-netlify.js --force",
    "test": "vitest",
    "test:rules": "vitest -t rules",
    "test:e2e": "playwright test",
    "e2e:install": "playwright install",
    "env:check": "node scripts/check-env.js",
    "env:setup": "cp env.example .env && echo '✅ .env 檔案已創建，請編輯填入您的 Firebase 配置'",
    "env:status": "node -e \"console.log('🔍 環境變數狀態:'); console.log('VITE_FIREBASE_API_KEY:', process.env.VITE_FIREBASE_API_KEY ? '已設置' : '未設置'); console.log('VITE_FIREBASE_PROJECT_ID:', process.env.VITE_FIREBASE_PROJECT_ID ? '已設置' : '未設置');\"",
    "simple": "node scripts/simple-setup.js",
    "office:setup": "node scripts/office-setup.js",
    "office:sync": "node scripts/sync-environment.js",
    "office:fix": "node scripts/sync-environment.js --fix",
    "cursor:sync": "node scripts/cursor-config-sync.js",
    "office:complete": "node scripts/complete-sync.js",
    "build:aab": "gradlew bundleRelease --no-daemon --console=plain --quiet",
    "build:aab:clean": "gradlew clean --no-daemon --console=plain --quiet && gradlew bundleRelease --no-daemon --console=plain --quiet",
    "check:aab": "dir app\\build\\outputs\\bundle\\release\\*.aab",
    "deploy:all": "npm run build && npm run build:aab",
    "auto:aab": "build-aab-auto.bat",
    "auto:web": "build-web-auto.bat",
    "auto:test": "test-auto.bat",
    "auto:deploy": "deploy-auto.bat"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.0",
    "@playwright/test": "^1.45.0",
    "@vitejs/plugin-react": "^4.5.0",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "vite": "^6.3.5",
    "vitest": "^2.0.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
